    <!-- Well for displaying the products eligible for purchase -->
    <div class="col-md-8 well" style="margin: 10px;" ng-controller="CheckoutController">
        <% for(i in values) { %>
        <div>
            <div class="col-md-12 well">
                <div class="col-md-4 well">
                    <img src="<%= values[i].images %> " style="width:150px;height:150px" />
                </div><!-- col md 4 -->
                <div class="col-md-8">
                    <div class="row">
                        <a data-ng-click="viewItem('<%- values[i].ITEM_NUM%>');">
                            <Strong>
                                Seller : <%- values[i].seller %>
                            </Strong>
                        </a>
                    </div>
                    <div class="row">
                        <Strong>
                            Price : $<%- values[i].total_price %>
                        </Strong>
                    </div>

                </div><!-- col md 8 -->
            </div>

            <button style="height: 35px;" class="btn btn-primary" data-ng-click="AddToCart()" >
